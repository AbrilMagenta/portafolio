@import "reset.css"
@import "fonts.css"



content-max-width = 940px

body
	margin 0
	

/*BACKGROUND*/

#background 
	position absolute
	top 0
	width 100%
	z-index -1
	

.container
	position relative
	width 100%
	z-index 1

/*NAVIGATION*/
.navigation
	position absolute
	
	display table
	right 5%
	clear both
	
	z-index 2

.each-navigation
	display table-cell
	font-family 'Apercu-Medium'	
	font-size 15px
	padding-right 20px
	
	cursor pointer

/*INTRO*/

.intro 
	position relative
	width 100%
	text-align center

.intro__wrapper
	
	position relative
	top 45%
	left 50%
	transform translate(-50%, -50%)


.intro__name
	font-family 'Didot-Regular'
	font-size 9vw

.intro__role 
	font-family 'Apercu-Medium'

/**
 * Work
 */

.work__header
	font-size 52px
	text-align center
	
.work__project-list
	margin 0
	padding 0
	list-style none
	counter-reset project

.work__project
	overflow hidden
	color black
	background none
	counter-increment project
	
.work__project_focus
	color white
	background black
	
.work__hit-field
	display flex
	flex-direction row
	align-items center
	position relative
	height 100px
	max-width content-max-width
	margin 0 auto
	border-top 1px solid rgba(0, 0, 0, .1)
	box-sizing border-box
	text-decoration none
	color inherit
	
.work__project:first-child .work__hit-field
	border-top-color rgba(0, 0, 0, 0)
	
.work__hit-field:after
	content: "";
	position absolute
	top 50%
	left: 100%
	width 122px
	height 21px
	margin-top -10px
	background url('../img/arrow.svg') 0 0 / contain no-repeat
	transform translateX(-100%)
	
.work__hit-field_focus:after
	background-image url('../img/arrow-focus.svg')
	transform translateX(0%)
	
	
.work__agency
	width 21%
	font-size 32px
	opacity 0
	transition all 300ms linear
	
.work__agency_focus
	opacity 1
	
.work__project-name
	position relative
	left -21%
	width 28%
	font-size 16px
	text-transform uppercase
	transition all 300ms ease-out
	
	&:before
		content '. ' counter(project, decimal-leading-zero)
		display inline-block
		width 24%
		opacity .6

.work__project-name_focus
	left 0
	
.work__meta
	display flex
	flex-direction row
	list-style none
	width 50%
	margin 0
	padding 0
	font-size 11px
	text-transform uppercase
	opacity 0
	
.work__meta_focus
	opacity 1
	
.work__meta__item
	margin-left 2.5em
	
	&:first-child
		margin-left 0
	
.work__meta__field-name,
.work__meta__field-value
	display inline-block

.about__header,
.awards__header,
.contact__header
	font-size 16px
	text-transform uppercase
	
	&:after
		content: ''
		display inline-block
		width 25px
		height 1px
		margin-left .875em
		vertical-align middle
		background black	

/**
 * About
 */

.about
	max-width content-max-width
	margin 0 auto
	
.about p
	font-size 38px
	line-height 1.3157

	
/**
 * Awards
 */

.awards
	max-width content-max-width
	margin 0 auto

/**
 * Contact
 */

.contact
	max-width content-max-width
	margin 0 auto
