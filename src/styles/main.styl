@import "reset.css"
@import "fonts.css"

html
	-webkit-font-smoothing: antialiased;


content-max-width = 940px

body
	margin 0
	font-family 'Apercu-Medium'
	

/*BACKGROUND*/

#background 
	position absolute
	top 0
	width 100%
	z-index -1
	

.container
	position relative
	width 100%
	z-index 1
	

/*NAVIGATION*/
.navigation
	position absolute
	top 20px
	right 20px
	clear both
	
	z-index 2

.each-navigation
	display inline-block
	font-family 'Apercu-Medium'	
	font-size 15px
	margin-right 40px
	height 15px
	overflow hidden
	cursor pointer
	
.each-navigation:before
	content ''
	display block
	float left
	width 27px
	height 2px
	background-color #e9e9e9
	margin-right 9px
	margin-top 7px

.nav-home:after
	content 'Home'
	display block

.nav-work:after
	content 'Work'
	display block

.nav-about:after
	content 'About'
	display block
	
.each-navigation__inner
	color black
	text-decoration none
	float left

.each-navigation__inner:after
	color #e9e9e9

/*INTRO*/

.intro 
	position relative
	width 100%
	text-align center

.intro__wrapper
	
	position relative
	top 45%
	left 50%
	transform translate(-50%, -50%)


.intro__name
	font-family 'Didot-Regular'
	font-size 9vw

.intro__role 
	font-family 'Apercu-Medium'
	font-size 17px
	letter-spacing 1px

.intro__works 
	position absolute
	font-family 'Apercu-Medium'
	font-size 12px
	bottom 0px
	margin 0 auto
	left 0
	right 0

.intro__works:after
	content ''
	width 2px
	height 70px
	display block
	margin 20px auto
	background-color black
	

/**
 * Work
 */

.work__header
	font-family 'Didot-Regular'
	font-size 52px
	text-align center
	
.work__project-list
	margin 0
	padding 0
	list-style none
	counter-reset project

.work__project
	overflow hidden
	color black
	background none
	counter-increment project
	
.work__project_focus
	color white
	background black
	
.work__hit-field
	display flex
	flex-direction row
	align-items center
	position relative
	height 100px
	max-width content-max-width
	margin 0 auto
	border-top 1px solid rgba(0, 0, 0, .1)
	box-sizing border-box
	text-decoration none
	color inherit
	
.work__project:first-child .work__hit-field
	border-top-color rgba(0, 0, 0, 0)
	
.work__hit-field:after
	content: "";
	position absolute
	top 50%
	left: 100%
	width 122px
	height 21px
	margin-top -10px
	background url('../assets/img/arrow.svg') 0 0 / contain no-repeat
	transform translateX(-100%)
	
.work__hit-field_focus:after
	background-image url('../assets/img/arrow-focus.svg')
	transform translateX(0%)
	
	
.work__agency
	width 21%
	font-family 'Didot-Regular'
	font-size 32px
	opacity 0
	transition all 300ms linear
	
.work__agency_focus
	opacity 1
	
.work__project-name
	position relative
	left -21%
	width 28%
	font-size 16px
	letter-spacing .15em
	text-transform uppercase
	transition all 300ms ease-out
	
	&:before
		content '. ' counter(project, decimal-leading-zero)
		display inline-block
		width 24%
		font-family 'Didot-Regular'
		opacity .6

.work__project-name_focus
	left 0
	
.work__meta
	display flex
	flex-direction row
	list-style none
	width 50%
	margin 0
	padding 0
	font-size 11px
	letter-spacing .15em
	text-transform uppercase
	opacity 0
	
.work__meta_focus
	opacity 1
	
.work__meta__item
	margin-left 2.5em
	
	&:first-child
		margin-left 0
	
.work__meta__field-name,
.work__meta__field-value
	display inline-block
	
.work__meta__field-value
	font-family 'Apercu-Light'

.about__header,
.awards__header,
.contact__header
	width 21%
	font-size 16px
	letter-spacing .15em
	text-transform uppercase
	
	&:after
		content: ''
		display inline-block
		width 25px
		height 1px
		margin-left .875em
		vertical-align middle
		background black

/**
 * About
 */

.about
	max-width content-max-width
	margin 0 auto
	
.about p
	font-size 38px
	line-height 1.3157

	
/**
 * Awards
 */

.awards
	display flex
	flex-direction row
	max-width content-max-width
	margin 0 auto

.awards__list
	margin 0
	padding 0
	list-style none
	font-size 18px
	line-height 2.33
	
.awards__project
	font-family 'Apercu-Light'
	
.awards__project:before
	content '\2014' ' '

/**
 * Contact
 */

.contact
	display flex
	flex-direction row
	max-width content-max-width
	margin 0 auto

.contact__email
	font-family 'Apercu-Light'
	font-size 36px
	text-decoration none
	color inherit
	
.contact__social-network-list
	display flex
	flex-direction row
	margin 0
	padding 0
	list-style none

.contact__social-network
	position relative
	margin-left 7.85em
	font-family 'Apercu-Bold'
	font-size 14px
	letter-spacing .15em
	text-transform uppercase
	
	&:before
		content ''
		position absolute
		top 50%
		left -4.78em
		width 1.78em
		height 1px
		background black
	
	&:first-child
		margin-left 0
		
		&:before
			content: none

.contact__social-network a
	text-decoration none
	color inherit

.contact__back-to-top
	width 21px
	height 83px
	background url('../assets/img/back-to-top.svg') no-repeat 0 0 / contain;


.diamond
	width 52px
	height 42px
	margin 0 auto
	opacity .3
	background url('../assets/img/diamond.svg') no-repeat 0 0 / contain