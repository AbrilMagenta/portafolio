@import "reset.css"
@import "fonts.css"

html
	-webkit-font-smoothing: antialiased;


body
	margin 0
	

/*BACKGROUND*/

#background 
	position absolute
	top 0
	width 100%
	z-index -1
	

.container
	position relative
	width 100%
	z-index 1
	

/*NAVIGATION*/
.navigation
	position absolute
	top 20px
	right 20px
	clear both
	
	z-index 2

.each-navigation
	display inline-block
	font-family 'Apercu-Medium'	
	font-size 15px
	margin-right 40px
	height 15px
	overflow hidden
	cursor pointer
	
.each-navigation:before
	content ''
	display block
	float left
	width 27px
	height 2px
	background-color #e9e9e9
	margin-right 9px
	margin-top 7px

.nav-home:after
	content 'Home'
	display block

.nav-work:after
	content 'Work'
	display block

.nav-about:after
	content 'About'
	display block
	
.each-navigation__inner
	color black
	text-decoration none
	float left

.each-navigation__inner:after
	color #e9e9e9

/*INTRO*/

.intro 
	position relative
	width 100%
	text-align center

.intro__wrapper
	
	position relative
	top 45%
	left 50%
	transform translate(-50%, -50%)


.intro__name
	font-family 'Didot-Regular'
	font-size 9vw

.intro__role 
	font-family 'Apercu-Medium'
	font-size 17px
	letter-spacing 1px

.intro__works 
	position absolute
	font-family 'Apercu-Medium'
	font-size 12px
	bottom 0px
	margin 0 auto
	left 0
	right 0

.intro__works:after
	content ''
	width 2px
	height 70px
	display block
	margin 20px auto
	background-color black
	

/**
 * Work
 */

.work__header
	font-size 52px
	text-align center
	
.work__project-list
	margin 0
	padding 0
	list-style none
	counter-reset project

.work__project
	color black
	background none
	counter-increment project
	
.work__project_focus
	color white
	background black
	
.work__hit-field
	display flex
	flex-direction row
	align-items center
	height 100px
	max-width 940px
	margin 0 auto
	border-top 1px solid rgba(0, 0, 0, .1)
	box-sizing border-box
	text-decoration none
	color inherit
	
	&:first-child
		border-top-color rgba(0, 0, 0, 0)
	
.work__agency
	width 21%
	font-size 32px
	
.work__project-name
	width 28%
	font-size 16px
	text-transform uppercase
	
	&:before
		content '. ' counter(project, decimal-leading-zero)
		display inline-block
		width 24%
		opacity .6
	
.work__meta
	display flex
	flex-direction row
	list-style none
	width 50%
	margin 0
	padding 0
	font-size 11px
	text-transform uppercase
	
.work__meta__item
	margin-left 2.5em
	
	&:first-child
		margin-left 0
	
.work__meta__field-name,
.work__meta__field-value
	display inline-block