@import "reset.css"
@import "fonts.css"



body
	margin 0
	

/*BACKGROUND*/

#background 
	position absolute
	top 0
	width 100%
	z-index -1
	

.container
	position relative
	width 100%
	z-index 1

/*NAVIGATION*/
.navigation
	position absolute
	
	display table
	right 5%
	clear both
	
	z-index 2

.each-navigation
	display table-cell
	font-family 'Apercu-Medium'	
	font-size 15px
	padding-right 20px
	
	cursor pointer

/*INTRO*/

.intro 
	position relative
	width 100%
	text-align center

.intro__wrapper
	
	position relative
	top 45%
	left 50%
	transform translate(-50%, -50%)


.intro__name
	font-family 'Didot-Regular'
	font-size 9vw

.intro__role 
	font-family 'Apercu-Medium'

/**
 * Work
 */

.work__header
	font-size 52px
	text-align center
	
.work__project-list
	margin 0
	padding 0
	list-style none
	counter-reset project

.work__project
	color black
	background none
	counter-increment project
	
.work__project_focus
	color white
	background black
	
.work__hit-field
	display flex
	flex-direction row
	align-items center
	height 100px
	max-width 940px
	margin 0 auto
	border-top 1px solid rgba(0, 0, 0, .1)
	box-sizing border-box
	text-decoration none
	color inherit
	
	&:first-child
		border-top-color rgba(0, 0, 0, 0)
	
.work__agency
	width 21%
	font-size 32px
	
.work__project-name
	width 28%
	font-size 16px
	text-transform uppercase
	
	&:before
		content '. ' counter(project, decimal-leading-zero)
		display inline-block
		width 24%
		opacity .6
	
.work__meta
	display flex
	flex-direction row
	list-style none
	width 50%
	margin 0
	padding 0
	font-size 11px
	text-transform uppercase
	
.work__meta__item
	margin-left 2.5em
	
	&:first-child
		margin-left 0
	
.work__meta__field-name,
.work__meta__field-value
	display inline-block